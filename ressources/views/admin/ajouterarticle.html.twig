{% extends "layout.html.twig" %}

{# Titre de la page. #}
{% block title %}
    Ajoutationner un Article
{% endblock title %}

{# Contenu de la page. #}
{% block contenu %}

    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                <h3>Ajoutasser un Article</h3>

            {# Titre de l'Article. #}
            <div class="form-group">
                <label for="" class="col-md-3 control-label">Titre de l'article</label>
                <div class="col-md-7">
                    {{ form_row(form.TITREARTICLE) }}
                </div>
            </div>

            {# Catégorie de l'Article. #}
            <div class="form-group">
                <label for="" class="col-md-3 control-label">Catégorie de l'article</label>
                <div class="col-md-7">
                    {{ form_row(form.IDCATEGORIE) }}
                </div>
            </div>

            {# Contenu de l'Article. #}
            <div class="form-group">
                <label for="" class="col-md-3 control-label">Description</label>
                <div class="col-md-7">
                    {{ form_row(form.CONTENUARTICLE) }}
                </div>
            </div>

            {# Featured Image de l'Article. #}
            <div class="form-group">
                <label for="" class="col-md-3 control-label">Featured Image <em>(image à la une)</em></label>
                <div class="col-md-7">
                    {{ form_row(form.FEATUREDIMAGEARTICLE) }}
                </div>
            </div>

            {# Options (SPECIAL et SPOTLIGHT) #}
            <div class="form-group">
                <label for="" class="col-md-3 control-label">Options</label>
                <div class="col-md-7">
                    <div class="checkbox">
                        <label for="">
                        {{  form_row(form.SPECIALARTICLE) }}
                        Spécial
                        </label>
                        <label for="">
                        {{  form_row(form.SPOTLIGHTARTICLE) }}
                        Spotlight
                        </label>
                    </div>
                </div>
            </div>

            {# IMPORTANT POUR LA VALIDATION DU TOKEN CSRF. #}
            {{ form_row(form._token) }}

            {# Submit. #}
            <div class="form-group">
                <div class="col-xs-7 col-xs-offset-3">
                    <button type="submit" class="btn btn-block btn-danger" value="Publier">Publicationner</button>
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock contenu %}

{% block stylesheets %}
    {{parent ()}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.css" integrity="sha256-Kq686ftxGamHGd8MpwJXmYgk1s7m00maEfHX1VpKYP8=" crossorigin="anonymous" />
{% endblock stylesheets %}

{% block javascripts %}
{{parent ()}}
<script src="//cdn.ckeditor.com/4.8.0/basic/ckeditor.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js" integrity="sha256-SUaao5Q7ifr2twwET0iyXVy0OVnuFJhGVi5E/dqEiLU=" crossorigin="anonymous"></script>

<script>
    CKEDITOR.replace(form_CONTENUARTICLE);
    $('.dropify').dropify({
        messages: {
            default: 'Glissez-déposez un fichier ici ou cliquez',
            replace: 'Glissez-déposez un fichier ici ou cliquez pour remplacer',
            remove: 'Supprimationner',
            error: 'Désolé, le fichier est trop volumineux'
        }
    });
</script>
{% endblock javascripts %}
